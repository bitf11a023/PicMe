@{ViewBag.Title = "Profile";}

@model PicMe.Models.User
<!DOCTYPE html>
<html lang="en">
<head><title></title>
    @section FancyBox{
        <script type="text/javascript" src="~/Scripts/jquery.fancybox-buttons.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.fancybox-media.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.fancybox-thumbs.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.fancybox.pack.js"></script>
        <link href="~/Content/jquery.fancybox-buttons.css" rel="stylesheet" />
        <link href="~/Content/jquery.fancybox-thumbs.css" rel="stylesheet" />
        <link href="~/Content/jquery.fancybox.css" rel="stylesheet" />
    }
    <script type ="text/javascript">
        $(document).ready(function() {
        $(".fancybox").fancybox({

            Width: 800,
        maxHeight	: 550,
        fitToView	: false,
        width		: '70%',
        height		: '70%',
        autoSize	: true,
        closeClick	: true,
        openEffect	: 'none',
        closeEffect	: 'none'
        });
        });
        </script>
</head>

	<body id="page5">
		<div class="main">
<!--header -->
			<header>
				<div class="wrapper">
					<h1><a href="index.html" id="logo">PicUpload.com</a></h1>
					<div id="search">
						<a href="logout.php"><h1 style="padding-top:0px; font-size:20px;"></h1></a>
					</div>
                    <form name="logout" action="/Account/Logout" method="post">
                        <input style="float:right;margin-top:30px;" class="button1" type="submit" value="LogOut">
                    </form>
				</div>
              
				<nav>
                    <ul id="menu">
                        <li><a href="../Pictures/Upload"><span>Upload</span></a></li>
                        <li class="active"><a href="../Account/Profile"><span>Profile	</span></a></li>
                        <li><a href="../Pictures/Gallery"><span>Gallery</span></a></li>
                        <li><a href="../Pictures/PublicPics"><span>Public</span></a></li>
                        <li class="last"><a href="../Pictures/Search"><span>Search</span></a></li>
                    </ul>
				</nav>
			</header>
<!--header end-->
<!--content -->
		<table class="leftsidebar" style="margin-bottom:200px;">
		<tr style="border:none;">
			<td style="width:130px;padding:100px 0 0 50px;">
				<ul>
					<li  style="background:#101010;"><a href="profile.php" ><span>Profile</span></a></li>
					<li><a href="../Account/Edit" ><span>Edit profile</span></a></li>
				</ul>
			</td>
			<td>
			<article id="content">
				<div class="wrapper">
					<h2>Profile</h2>
					<div style="margin-left:80px;">
					<br>
                        @using (Html.BeginForm("FileUpload", "Account", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
                        {
                            <label for="file">Upload Image:</label>
                            <input type="file" name="file" id="file" style="width: 100%;" />
                            <input  type="submit" value="Upload" class="submit" />
                        }
                        <table width="160;" height="160;">
                            <tr><td><a class="fancybox" rel="group" href="@Model.ProfilePicLoc" title="Profile Pic"><img style="border:1px solid white;" src="@Model.ProfilePicLoc" width="160" height="160" /></a></td></tr>
                        </table>
						<br>
							<span style="width:100px;float:left;">Name: @Html.LabelForModel(Model.FName)</span><br><br>
							<span style="width:100px;float:left;">Username:@Model.UserName</span> <br><br>
							<span style="width:100px;float:left;">Email: @Html.LabelForModel(Model.Email)</span> <br><br>
							<span style="width:100px;float:left;">Gender:@Model.Gender </span> <br>
				</div>
			</div>
			</article>
			</td></tr>
			</table>
		</div>
		<div class="bg1">
			<div class="main">
				<article id="content2">
					<div class="wrapper">
					</div>
				</article>
			</div>
		</div>
		
	</body>
</html>